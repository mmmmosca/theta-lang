{
  "scopeName": "source.theta",
  "name": "Theta",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#blueprints" },
    { "include": "#restPattern" },
    { "include": "#functions" },
    { "include": "#brackets" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.theta",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        { "name": "string.quoted.single.theta", "begin": "'", "end": "'" },
        { "name": "string.quoted.double.theta", "begin": "\"", "end": "\"" }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float.theta", "match": "\\b\\d+\\.\\d+\\b" },
        { "name": "constant.numeric.integer.theta", "match": "\\b\\d+\\b" }
      ]
    },

    "booleans": {
      "patterns": [
        { "name": "constant.language.boolean.theta", "match": "\\b(true|false)\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.theta",
          "match": "\\b(let|def|return|when|else|matches|blueprint|import)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.arrow.theta", "match": "->" }
        { "name": "keyword.operator.matches.theta", "match": "\\bmatches\\b" },
        { "name": "keyword.operator.logical.theta", "match": "\\b(and|or|not)\\b" }
      ]
    },

    "types": {
      "patterns": [
        { "name": "support.type.cast.theta", "match": "\\b(Int|Float|String|Bool)\\s*(?=\\()" }
      ]
    },
    "blueprints": {
      "patterns": [
        { "name": "support.namespace.blueprint.theta", "match": "\\b(io|tm|python)\\b(?=\\.)" }
      ]
    },
    "restPattern": {
      "patterns": [
        { "name": "variable.parameter.rest.theta", "match": "\\*[A-Za-z_][A-Za-z0-9_]*" }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.theta",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "brackets": {
      "patterns": [
        { "name": "punctuation.section.brackets.begin.theta", "match": "[\\[\\]\\(\\)\\{\\}]" }
      ]
    }
  }
}